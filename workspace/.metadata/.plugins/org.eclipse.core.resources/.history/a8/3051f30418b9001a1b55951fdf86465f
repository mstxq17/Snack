	<script>
function addCart() {
	$("#popup_info").text("加入购物车成功...");
	$('.popup_con').fadeIn('fast', function() {
		setTimeout(function(){
			$('.popup_con').fadeOut('fast',function(){
			});	
		}, 2000)
	});
}

var page = 1;
var rows = 3;
var totalPage = 1;
var goods_tid = 0;
$(function(){
	$.post("type", {op:"find"}, result => {
			var str = "";
			$.each(result, function(index, item){
				str += '<a href="javascript:void(0)" onclick="findByTid(this,' + item.tid + ')">' + item.tname + '</a>';
			});
			$("#search_item").append($(str));
	}, "json");
	
	$.post("goods", {op:"finds", page:page, rows:rows}, result => {
		totalPage = Math.ceil(result.total / rows);
		showData(result.rows);
		// 显示页码
		showPage();
	}, "json");
});


function findByTid(obj, tid){
	if (tid == 0){
		tid = "";
	}
	goods_tid = tid;
	
	$.post("goods", {op:"finds", tid:tid, page:page, rows:rows}, result=>{
		totalPage = Math.ceil(result.total / rows);
		showData(result.rows);
		showPage();
		$(obj).addClass("selected");
	}, "json");
}


function showData(data){
	var str = "";
	var pics = [];
	$.each(data, function(index, item) {
		str += '<li class="hot_box"><i class="all_i i_t"></i><i class="all_i i_r"></i><i class="all_i i_b"></i><i class="all_i i_l"></i>';
		str += '<a href="detail.html#' + item.gid + '" target="_blank" class="hot_warp">';
		pics = item.pics.split(";");
		str += '<img src="' + pics[0] + '" title="' + item.gname + '"/><span>' + item.gname + '</span></a><div class="view_info">'
     	str += '<span class="price">' + item.price + '</span><span>/ ' + item.weight + '</span><span class="buy" onclick="addCart(' + item.gid + ')">&nbsp;</span></div></li>';
	})
	$("#view_goods").html("").append($(str));
}

function showPage() {
	var str = '<a href="javascript:void(0)" class="active" onclick="findByPage(this, 1)">首页</a>';
	for (var i = 1; i <= totalPage; i ++) {
		if (i == page) {
			str += '<a href="javascript:void(0)" class="active" onclick="findByPage(this, ' + i + ')">' + i + '</a>';
		} else {
			str += '<a href="javascript:void(0)" onclick="findByPage(this, ' + i + ')">' + i + '</a>';
		}
	}
	if (page == totalPage) {
		str += '<a href="javascript:void(0)" class="active" onclick="findByPage(this, ' + totalPage + ')">末页</a>';
	} else {
		str += '<a href="javascript:void(0)" onclick="findByPage(this, ' + totalPage + ')">末页</a>';
	}
	$("#page_info").html("").append($(str));
}

function findByPage(obj, page){
	if ($(obj).hasClass("active")){
		return;
	}
	flag = page;
	$.post("goods", {op:"findByPage", tid: goods_tid, page:page, rows:rows}, result => {
		showData(result);
	}, "json");
	$("#page_info>a").removeClass("active");
	$("#page_info>a").eq(flag).addClass("active");
	if (page == 1){
		$("#page_info>a").eq(0).addClass("active");
	}
	
	if(page == totalPage){
		$("#page_info>a").last().addClass("active");
	}
}


</script>
